@using EntityLayer.Concrete
@model Month

<div class="card-header border-0">
    <h3 class="mb-0">Servis Düzenleme Tablosu</h3>
</div>
@using (Html.BeginForm("Edit", "Month", FormMethod.Post))
{
    @Html.HiddenFor(ba => ba.MonthID)
    <br />
    @Html.Label("Ay")
    @Html.TextBoxFor(ba => ba.MonthTime, new { @class = "form-control" })
    @Html.ValidationMessageFor(ba => ba.MonthTime)
    <br />
    @Html.Label("İçerik")
    @Html.TextBoxFor(ba => ba.MonthTaskContent, new { @class = "form-control" })
    @Html.ValidationMessageFor(ba => ba.MonthTaskContent)

    <br />
    @Html.Label("Kullanıcı")
    @Html.DropDownListFor(ba => ba.UserID, (List<SelectListItem>)ViewBag.Us, new { @class = "form-control" })

    <br />
    @Html.Label("Önem")
    @Html.DropDownListFor(ba => ba.TaskImportanceID, (List<SelectListItem>)ViewBag.tm, new { @class = "form-control" })

    <br />
    @Html.Label("Durum")
    @Html.DropDownListFor(ba => ba.TaskStatuseID, (List<SelectListItem>)ViewBag.ts, new { @class = "form-control" })

    <button class="btn btn-success">Kaydet</button>
}
