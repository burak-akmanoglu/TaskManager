@using EntityLayer.Concrete
@model Week

<div>
    <h3 class="mb-0">Haftalık Görev Ekleme</h3>
</div>
@using (Html.BeginForm("Create", "Week", FormMethod.Post))
{

    <div>   @Html.Label((((DateTime.Now.DayOfYear) / 7) + 1).ToString()) .Haftadayız</div>

    @Html.Label("Hafta")
    @Html.TextBoxFor(ba => ba.WeekTime, new { @class = "form-control" })
    @Html.ValidationMessageFor(ba => ba.WeekTime)

    <br />
    @Html.Label("İçerik")
    @Html.TextBoxFor(ba => ba.WeekTaskContent, new { @class = "form-control" })
    @Html.ValidationMessageFor(ba => ba.WeekTaskContent)
    <br />
    @Html.Label("Kullanıcı")
    @Html.DropDownListFor(ba => ba.UserID, (List<SelectListItem>)ViewBag.Us, new { @class = "form-control" })

    <br />
    @Html.Label("Önem")
    @Html.DropDownListFor(ba => ba.TaskImportanceID, (List<SelectListItem>)ViewBag.tm, new { @class = "form-control" })

    <br />
    @Html.Label("Durum")
    @Html.DropDownListFor(ba => ba.TaskStatuseID, (List<SelectListItem>)ViewBag.ts, new { @class = "form-control" })

    <button class="btn btn-info">Kaydet</button>
}